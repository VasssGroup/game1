{
    "compilerOptions": {
      "outDir": "./build/",
      //"noImplicitAny": true,
      "module": "ESNext",
      "target": "es6",
      "jsx": "react-jsx",
      "allowJs": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      // Обязательное поле при использовании с esbuild
      "isolatedModules": true
    },
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    }
  }